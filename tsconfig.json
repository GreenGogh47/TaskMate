{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    // aka - give me the safest TypeScript experience possible
    "paths": {
      "@firebase/auth": [
        "./node_modules/@firebase/auth/dist/index.rn.d.ts"
      ],
      // Map the alias '@' to the 'src' directory
      "@/*": [
        "./src/*"
      ]
      // allows imports like @/components
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
  // Check ALL ts and tsx files in this project.
}

